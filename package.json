{
  "private": true,
  "scripts": {
    "typecheck": "pnpm run npm_package:typecheck && pnpm run playground:typecheck",
    "playground:typecheck": "tsc --noEmit --pretty",
    "npm_package:typecheck": "pnpm -F ckeditor5-phoenix run typecheck",
    "npm_package:watch": "pnpm -F ckeditor5-phoenix run watch",
    "npm_package:build": "pnpm -F ckeditor5-phoenix run build",
    "npm_package:test": "pnpm -F ckeditor5-phoenix run test",
    "npm_package:test:watch": "pnpm -F ckeditor5-phoenix run test:watch"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/phoenix": "^1.6.6",
    "chromedriver": "^143.0.4",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "phoenix": "^1.7.21",
    "phoenix_live_view": "^1.0.17",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "npm_package"
  ],
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ],
    "*.{ex,exs}": [
      "mix format --check-formatted",
      "mix credo --strict"
    ]
  }
}
