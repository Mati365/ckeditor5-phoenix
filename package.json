{
  "private": true,
  "scripts": {
    "typecheck": "npm run playground:typecheck && npm run npm_package:typecheck",
    "playground:typecheck": "tsc --noEmit --pretty",
    "npm_package:watch": "npm run watch --workspace=ckeditor5-phoenix",
    "npm_package:build": "npm run build --workspace=ckeditor5-phoenix",
    "npm_package:typecheck": "npm run typecheck --workspace=ckeditor5-phoenix "
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "npm_package"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "mix format --check-formatted"
    ]
  }
}
